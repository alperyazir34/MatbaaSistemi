@model IsTakip.Models.SiparislerDB

<form action="/Personel/SiparisAraa" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <table style="float:right;">
        <tr>

            <td>
                @Html.EditorFor(model => model.MusteriAd, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                <input type="submit" value="İsime Göre Filtrele" class="btn btn-primary" style="width:200px; height:35px;" />
            </td>
        </tr>
    </table>
</form>
<br /><br />
<form action="/Personel/SiparisDurumAra" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <table style="float:right;">
        <tr>

            
            <td>
                @Html.DropDownListFor(model => model.SiparisDurum, new SelectList(
      new List<SelectListItem>
      {
        new SelectListItem { Selected = false, Text = "Hazırlanıyor", Value = "Hazırlanıyor".ToString()},
        new SelectListItem { Selected = false, Text = "Hazırlandı", Value = "Hazırlandı".ToString()},
      }, "Value", "Text", 1), new { @class = "form-control in-mi-put", id = "SiparisDurum", onchange = "CallChangefunc(this.value)" })
                @Html.ValidationMessageFor(model => model.SiparisDurum, "", new { @class = "text-danger" })
            </td>
            <td>
                <input type="submit" value="Sipariş Durumuna Göre Filtrele" class="btn btn-primary" style="width:273px; height:35px;" />
            </td>
        </tr>
    </table>
</form>

